{
	"name": "sofie-logger",
	"version": "0.0.1",
	"description": "Library for unified logging across Sofie Automation projects, based on LogTape.",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"license": "MIT",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Sofie-Automation/sofie-logger.git",
		"directory": "packages/shared-lib"
	},
	"bugs": {
		"url": "https://github.com/Sofie-Automation/sofie-logger/issues"
	},
	"scripts": {
		"build": "run -T rimraf dist && run build:main",
		"build:main": "run -T tsc -p tsconfig.build.json",
		"lint:raw": "run -T eslint",
		"lint": "run lint:raw .",
		"unit": "run -T jest",
		"test": "run lint && run unit",
		"watch": "run -T jest --watch",
		"cov": "run -T jest --coverage; open-cli coverage/lcov-report/index.html",
		"cov-open": "open-cli coverage/lcov-report/index.html",
		"validate:dependencies": "yarn npm audit --environment production && run license-validate",
		"validate:dev-dependencies": "yarn npm audit --environment development",
		"license-validate": "run -T sofie-licensecheck",
		"release:release": "standard-version",
		"release:prerelease": "standard-version --prerelease"
	},
	"engines": {
		"node": ">=22.20.0"
	},
	"files": [
		"/dist",
		"/CHANGELOG.md",
		"/README.md",
		"/LICENSE"
	],
	"dependencies": {
		"@logtape/file": "^1.2.3",
		"@logtape/logtape": "^1.3.6"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@sofie-automation/code-standard-preset": "^3.0.0",
		"@types/jest": "^30.0.0",
		"@types/node": "^22.10.10",
		"eslint": "^9.18.0",
		"eslint-plugin-react": "^7.37.4",
		"jest": "^30.2.0",
		"jest-util": "^30.2.0",
		"prettier": "^3.4.2",
		"rimraf": "^6.1.2",
		"standard-version": "^9.5.0",
		"ts-jest": "^29.4.6",
		"typescript": "~5.7.3"
	},
	"prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
	"lint-staged": {
		"*.{js,css,json,md,scss}": [
			"yarn run -T prettier"
		],
		"*.{ts,tsx}": [
			"yarn lint:raw"
		]
	},
	"publishConfig": {
		"access": "public"
	},
	"packageManager": "yarn@4.10.3"
}
